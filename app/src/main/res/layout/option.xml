<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="COVERED TOPICS"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Accounting Basic"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/button2">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Debits and Credits"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Chart of Account "
        android:id="@+id/button3"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1">
    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Bookkeeping "
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button3"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Accounting Equation "
        android:id="@+id/button6"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Accounting Principles "
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_below="@+id/button3">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Financial Accounting "
        android:id="@+id/button8"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toStartOf="@+id/button7">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Adjusting Entries "
        android:id="@+id/button9"
        android:layout_below="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_alignBottom="@+id/button8">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Balance Sheet "
        android:id="@+id/button10"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toStartOf="@+id/button9">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Income Statement"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button10"
        android:layout_toRightOf="@+id/button8"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Bank Reconciliation "
        android:id="@+id/button12"
        android:layout_below="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button11"
        android:layout_toStartOf="@+id/button11">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Accounts Payable"
        android:id="@+id/button13"
        android:layout_below="@+id/button10"
        android:layout_toRightOf="@+id/button10"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignBottom="@+id/button12">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Inventory and cost of Good sold "
        android:id="@+id/button14"
        android:layout_below="@+id/button12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button13"
        android:layout_toStartOf="@+id/button13">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Depreciation"
        android:id="@+id/button15"
        android:layout_below="@+id/button12"
        android:layout_toRightOf="@+id/button14"
        android:layout_alignRight="@+id/button13"
        android:layout_alignEnd="@+id/button13"
        android:layout_alignBottom="@+id/button14">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Payroll Accounting "
        android:id="@+id/button16"
        android:layout_below="@+id/button14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button17"
        android:layout_toStartOf="@+id/button17">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Stockholder Equity"
        android:id="@+id/button17"
        android:layout_alignRight="@+id/button15"
        android:layout_alignEnd="@+id/button15"
        android:layout_toEndOf="@+id/button14"
        android:layout_toRightOf="@+id/button14"
        android:layout_alignBottom="@+id/button16"
        android:layout_below="@+id/button14">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:text="Nonprofit Accounting"
        android:id="@+id/button18"
        android:layout_below="@+id/button16"
        android:layout_alignRight="@+id/button17"
        android:layout_alignEnd="@+id/button17"
        android:layout_toRightOf="@+id/button16"
        android:layout_toEndOf="@+id/button16">
    </Button>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonOnclick"
        android:layout_below="@+id/button16"
        android:layout_toLeftOf="@+id/button18"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/button18"
        android:background="#3a959c" />



</RelativeLayout>
